<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Creator"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"/>

        <!-- General Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            android:paddingStart="8dp"
            android:textStyle="bold"
            android:textColor="@color/button_color"
            android:layout_marginBottom="8dp"/>

        <!-- Language Item -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:drawableStart="@drawable/ic_language"
                    android:drawablePadding="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Arrow" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Settings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:paddingStart="8dp"
            android:textStyle="bold"
            android:textColor="@color/button_color"
            android:layout_marginBottom="8dp" />

        <!-- Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp">

            <!-- Individual Setting Items with IDs -->
            <include
                android:id="@+id/vibrationSetting"
                layout="@layout/item_setting_switch" />

            <include
                android:id="@+id/soundSetting"
                layout="@layout/item_setting_switch" />

            <include
                android:id="@+id/autoCopySetting"
                layout="@layout/item_setting_switch" />

            <include
                android:id="@+id/autoWebSetting"
                layout="@layout/item_setting_switch" />

            <include
                android:id="@+id/saveHistorySetting"
                layout="@layout/item_setting_switch" />
        </LinearLayout>


        <!-- Others Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:textColor="@color/button_color"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp">

            <!-- Others Items -->
            <include layout="@layout/item_setting_arrow" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
