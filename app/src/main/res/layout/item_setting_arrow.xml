<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Rate Us Item -->
    <ImageView
        android:id="@+id/iconRateUs"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_rateus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iconPrivacy"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/rateUsTextLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        app:layout_constraintTop_toTopOf="@id/iconRateUs"
        app:layout_constraintBottom_toBottomOf="@id/iconRateUs"
        app:layout_constraintStart_toEndOf="@id/iconRateUs"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_us"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_encourage_us"
            android:textSize="12sp"
            android:textColor="@color/gray" />
    </LinearLayout>

    <!-- Privacy Policy Item -->
    <ImageView
        android:id="@+id/iconPrivacy"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_privacy"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/iconRateUs"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/privacyTextLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        app:layout_constraintTop_toTopOf="@id/iconPrivacy"
        app:layout_constraintBottom_toBottomOf="@id/iconPrivacy"
        app:layout_constraintStart_toEndOf="@id/iconPrivacy"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_our_privacy_terms"
            android:textSize="12sp"
            android:textColor="@color/gray" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
